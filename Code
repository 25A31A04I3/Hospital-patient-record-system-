#include <stdio.h>

// Define structure
struct Patient {
    int id;
    char name[50];
    int age;
    char disease[50];
};

// Function to add patient
void addPatient(struct Patient p[], int *n) {
    printf("\nEnter Patient ID: ");
    scanf("%d", &p[*n].id);

    printf("Enter Patient Name: ");
    scanf(" %[^\n]", p[*n].name);

    printf("Enter Age: ");
    scanf("%d", &p[*n].age);

    printf("Enter Disease: ");
    scanf(" %[^\n]", p[*n].disease);

    (*n)++;
    printf("\nPatient record added successfully!\n");
}

// Function to display patients
void displayPatients(struct Patient p[], int n) {
    if (n == 0) {
        printf("\nNo patient records available.\n");
        return;
    }

    printf("\n--- Patient Records ---\n");
    for (int i = 0; i < n; i++) {
        printf("\nPatient %d\n", i + 1);
        printf("ID      : %d\n", p[i].id);
        printf("Name    : %s\n", p[i].name);
        printf("Age     : %d\n", p[i].age);
        printf("Disease : %s\n", p[i].disease);
    }
}

int main() {
    struct Patient p[100];
    int choice, n = 0;

    do {
        printf("\n--- Hospital Patient Record System ---\n");
        printf("1. Add Patient\n");
        printf("2. Display Patients\n");
        printf("3. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                addPatient(p, &n);
                break;
            case 2:
                displayPatients(p, n);
                break;
            case 3:
                printf("\nExiting program. Thank you!\n");
                break;
            default:
                printf("\nInvalid choice! Try again.\n");
        }
    } while (choice != 3);

    return 0;
} 
